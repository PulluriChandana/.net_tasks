<head>
    <link href="~/css/Details.css" rel="stylesheet" type="text/css" />
</head>

<h1>@ViewData["Title"]</h1>

<div class="card">
    <div class="card-header">
        <h3>Employee Details</h3>
    </div>
    <div class="card-body">
        <dl class="row dl-horizontal">
            <dt class="col-sm-2">Employee No</dt>
            <dd class="col-sm-10">@Model.Employeeno</dd>

            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Model.EmpName</dd>

            <dt class="col-sm-2">Job Title</dt>
            <dd class="col-sm-10">@Model.JobTitle</dd>

            <dt class="col-sm-2">Date of Birth</dt>
            <dd class="col-sm-10">@Model.DateOfBirth.ToString("d")</dd>

            <dt class="col-sm-2">Hire Date</dt>
            <dd class="col-sm-10">@Model.HireDate.ToString("d")</dd>

            <dt class="col-sm-2">Salary</dt>
            <dd class="col-sm-10">@Model.Salary.ToString("C")</dd>

            <dt class="col-sm-2">Gender</dt>
            <dd class="col-sm-10">@Enum.GetName(typeof(Gender), Model.Gender)</dd>

            <dt class="col-sm-2">Department</dt>
            <dd class="col-sm-10">
                @if (Model.Department != null)
                {
                    <span><strong>Department ID: </strong> @Model.DepartmentId</span>
                    <br />
                    <span><strong>Department Name: </strong>@Model.Department.Name</span>
                    <br />
                    <span><strong>Department Location: </strong>@Model.Department.Location</span> <!-- Show additional department info -->
                }
                else
                {
                    <span>No Department</span>
                }
            </dd>
        </dl>
    </div>
    <div class="card-footer text-center">
        <a href="@Url.Action("Index", "Employee")" class="btn btn-primary">Back to Employee List</a>
    </div>
</div>

