@model TASKS_6_MVC_.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<head>
    <head>
        <link href="~/css/Delete.css" rel="stylesheet" type="text/css" />
    </head>
</head>

<body>
    <div class="delete-container">
        <h1>Delete Employee</h1>
        <h4>Are you sure you want to delete this employee?</h4>
        <div>
            <h2>@Model.EmpName</h2>
            <p>Job Title: @Model.JobTitle</p>
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Employeeno" />
            <button type="submit">Delete</button>
        </form>

        <a href="@Url.Action("Index")">Cancel</a>
    </div>
</body>
